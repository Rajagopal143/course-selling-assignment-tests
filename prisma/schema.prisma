generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum role {
  STUDENT
  INSTRUCTOR
}


model User {
  id String @id @default(uuid()) 
  email String @unique()
  password String
  name String
  role role
  purchase Purchase[]
  createdAt DateTime @default(now())
}

model Course {
  id String @id @default(uuid()) 
  title String
  description String
  price Int
  instructorId String
  lesson Lesson[]
  purchase Purchase[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
} 

model Lesson {
  id String @id @default(uuid()) 
  title String
  content String
  course Course @relation(fields: [courseId],references: [id])
  courseId String
}
model Purchase {
  id String @id @default(uuid()) 
  user User @relation(fields: [userId],references: [id])
  userId String
  course Course @relation(fields: [courseId],references: [id])
  courseId String
}

